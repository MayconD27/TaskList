APP_NAME="CRM Laravel API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Configuração do Banco de Dados ---
# Ajuste conforme o seu SGBD. Este é um exemplo para MySQL ou Postgres.
# Se for usar SQLite, remova estas linhas e defina o caminho para o arquivo SQLite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=task_list
DB_USERNAME=root
DB_PASSWORD=

# --- Configurações de Cache, Session e Queue ---
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- Configuração de E-mail (Exemplo) ---
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- Configurações AWS (Se aplicável) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- Configuração SANCTUM (para SPA Authentication) ---
# Adicione a URL do seu frontend para autenticação
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173

# --- Configuração de CORS (Obrigatório para comunicação com React) ---
# Você deve instalar o pacote 'fruitcake/laravel-cors' e publicar a config
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173